{
  "name": "ahmetcetinkaya.me",
  "version": "3.0.0",
  "type": "module",
  "scripts": {
    "build": "cd src/presentation && npm run build",
    "format": "(prettier --write . \"!src/presentation/**/*\") && (cd src/presentation && npm run format)",
    "install-all": "npm install && find . -name 'package.json' ! -path '*/node_modules/*' -execdir npm install \\;",
    "install-all-bun": "bun install && find . -name 'package.json' ! -path '*/node_modules/*' ! -path './src/presentation/src/core/*' -execdir bun install \\;",
    "postinstall": "npm run install-submodules",
    "install-submodules": "cd src/presentation/src/core/acore-ts && npm install && cd ../acore-solidjs && npm install && cd ../acore-astro && npm install",
    "lint": "eslint .",
    "start": "cd src/presentation && npm start"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/bun": "^1.2.18",
    "eslint": "^9.31.0",
    "globals": "^15.15.0",
    "prettier": "3.4.2",
    "prettier-plugin-jsdoc": "^1.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.18",
    "typescript-eslint": "^8.36.0"
  },
  "dependencies": {
    "tailwind-merge": "^2.6.0"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  }
}
