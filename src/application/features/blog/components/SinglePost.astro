---
import { Icon } from 'astro-icon/components';

import Image from '~/application/shared/components/ui/Image.astro';
import PostTags from '~/application/features/blog/components/Tags.astro';
import SocialShare from '~/application/shared/components/SocialShare.astro';

import { getPermalink } from '~/application/shared/utils/permalinks';
import { getFormattedDate } from '~/application/shared/utils/utils';

import type { Post } from '~/types';

export interface Props {
  post: Post;
  url: string | URL;
}

const { post, url } = Astro.props;
---

<section class="mx-auto py-8 sm:py-16 lg:py-20">
  <article>
    <header class={post.image ? '' : ''}>
      <div class="mx-auto mb-2 mt-0 flex max-w-3xl flex-col justify-between px-4 sm:flex-row sm:items-center sm:px-6">
        <p>
          <Icon name="tabler:clock" class="-mt-0.5 inline-block h-4 w-4 dark:text-gray-400" />
          <time datetime={String(post.publishDate)} class="inline-block">{getFormattedDate(post.publishDate)}</time>
          {
            post.author && (
              <>
                {' '}
                · <Icon name="tabler:user" class="-mt-0.5 inline-block h-4 w-4 dark:text-gray-400" />
                <span class="inline-block">{post.author}</span>
              </>
            )
          }
          {
            post.category && (
              <>
                {' '}
                ·{' '}
                <a class="inline-block hover:underline" href={getPermalink(post.category.slug, 'category')}>
                  {post.category.title}
                </a>
              </>
            )
          }
          {
            post.readingTime && (
              <>
                &nbsp;· <span>{post.readingTime}</span> min read
              </>
            )
          }
        </p>
      </div>

      <h1
        class="leading-tighter font-heading mx-auto max-w-3xl px-4 text-4xl font-bold tracking-tighter sm:px-6 md:text-5xl"
      >
        {post.title}
      </h1>
      <p
        class="text-muted mx-auto mb-8 mt-4 max-w-3xl px-4 text-justify text-xl dark:text-slate-400 sm:px-6 md:text-2xl"
      >
        {post.excerpt}
      </p>

      {
        post.image ? (
          <Image
            src={post.image}
            class="mx-auto mb-6 max-w-full bg-gray-400 dark:bg-slate-700 sm:rounded-md lg:max-w-[900px]"
            widths={[400, 900]}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post?.excerpt || ''}
            width={900}
            height={506}
            loading="eager"
            decoding="async"
          />
        ) : (
          <div class="mx-auto max-w-3xl px-4 sm:px-6">
            <div class="border-t dark:border-slate-700" />
          </div>
        )
      }
    </header>
    <div
      class="prose-md prose-headings:font-heading prose-headings:leading-tighter prose-a:text-primary prose mx-auto mt-8 max-w-3xl px-6 dark:prose-invert lg:prose-xl prose-headings:scroll-mt-[80px] prose-headings:font-bold prose-headings:tracking-tighter prose-li:my-0 prose-img:rounded-md prose-img:shadow-lg dark:prose-headings:text-slate-300 dark:prose-a:text-blue-400 sm:px-6"
    >
      <slot />
    </div>
    <div class="mx-auto mt-8 flex max-w-3xl flex-col justify-between px-6 sm:flex-row sm:px-6">
      <PostTags tags={post.tags} class="mr-5 rtl:ml-5 rtl:mr-0" />
      <SocialShare url={url} text={post.title} class="mt-5 align-middle text-gray-500 dark:text-slate-600 sm:mt-1" />
    </div>
  </article>
</section>
