---
import { TranslationKeys } from "@domain/data/Translations";
import DesktopLayout from "../../shared/layouts/DesktopLayout.astro";
import { useI18nStatic } from "../../shared/utils/i18nTranslate";
import SeoConstants from "../../shared/constants/SeoConstants";
import ContactPageOGImage from "../_assets/images/contact-page-og-image.webp";

const translate = useI18nStatic(Astro.url);

const title = `${translate(TranslationKeys.apps_welcome_contact)} | ${SeoConstants.DEFAULT_TITLE}`;
const description = translate(TranslationKeys.apps_welcome_contact_desc);
const ogImageAlt = translate(TranslationKeys.apps_welcome_about_me_profile_image_alt);
const structuredData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  name: title,
  description: description,
  url: Astro.url.href,
  image: ContactPageOGImage.src,
};
---

<DesktopLayout
  metadata={{
    title,
    description,
    ogImage: {
      image: ContactPageOGImage,
      alt: ogImageAlt,
    },
    structuredData,
  }}
/>
